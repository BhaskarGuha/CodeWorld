#!/bin/bash

# Prompt the user for the directory and file extension
read -p "Enter the directory path: " directory
read -p "Enter the file extension (e.g., txt, csv, etc.): " extension

# Search for files with the specified extension in the directory
files=$(find "$directory" -type f -name "*.$extension")

# Check if any files were found
if [[ -z $files ]]; then
  echo "No files found with the extension .$extension in the directory $directory."
  exit 1
fi

# Prompt the user for a search term
read -p "Enter a search term: " search_term

# Iterate over the found files and display their names and contents
for file in $files; do
  echo "File: $file"
  echo "Content:"
  grep -i "$search_term" "$file"
  echo "-----------------------"
done

